<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primary_color_custom_dialog</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MusicTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="PlayingLayoutTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">sec-roboto-condensed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowTextViewStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">sec-roboto-condensed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MenuTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="MyCustomThemeForDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:colorEdgeEffect">@color/primary_color_custom_dialog</item>
        <item name="android:colorPrimary">@color/primary_color_custom_dialog</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_color_custom_dialog</item>
        <item name="android:colorAccent">@color/primary_color_custom_dialog</item>
    </style>

    <style name="ComponentButton.Custom" parent="android:Theme.DeviceDefault.Light">
        <item name="android:colorControlActivated">@color/primary_color_custom_dialog</item>
    </style>

    <style name="ActionBarComponentButton.Custom" parent="android:Theme.DeviceDefault.Light">
        <item name="android:colorControlActivated">@color/primary_color_custom_dialog</item>
        <item name="android:colorControlNormal">@color/colorBlueGray</item>
    </style>

</resources>
